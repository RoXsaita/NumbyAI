{
  "name": "finance-budgeting-widgets",
  "version": "1.0.0",
  "description": "React widgets for Finance Budgeting App",
  "type": "module",
  "scripts": {
    "build": "node ./scripts/build-widgets.mjs && node ./scripts/build-app.mjs",
    "build:widgets": "node ./scripts/build-widgets.mjs",
    "build:app": "node ./scripts/build-app.mjs",
    "dev": "node ./scripts/build-widgets.mjs --watch",
    "build:dev": "DATA_SOURCE=mock node ./scripts/build-widgets.mjs",
    "validate:mock": "node ./scripts/validate-mock-data.mjs",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.25.0",
    "jest": "^30.0.0",
    "sharp": "^0.34.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.0"
  }
}
